@using EmployeeManagement.BL.Interfaces;

@inject IPersonsBL persons;

@model int

@(
        Html.Kendo().MultiSelectFor(m => m)
        .HtmlAttributes(new { style = "width:95% !important", required = "true", validationmessage = "El empleado es requerida." })
            .DataTextField("Name")
            .DataValueField("Id")
            .ValuePrimitive(true)
            .BindTo(persons.GetIdsAndNames())
)