@model int

@(Html.Kendo().ComboBoxFor(m=>m)        
        .HtmlAttributes(new { style = "width:95% !important", required = "true", validationmessage = "La certificación es requerida."})
        .Placeholder("Seleccione...")
        .DataTextField("Name")
        .DataValueField("Id")           
        .Enable(true)                              
        .Filter(FilterType.Contains)
        .Suggest(true)       
        .ValuePrimitive(true)
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("Get", "Certifications");
            });
        })
)